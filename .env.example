# Environment Variables Example
# Copy this file to .env and fill in your values

# API
NODE_ENV=development
PORT_API=3000
DATABASE_URL=postgresql://user:password@localhost:5432/livoice
DATABASE_PROVIDER=postgresql
SESSION_SECRET=your-session-secret-here
APP_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000
COOKIE_DOMAIN=localhost
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# OpenAI
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TLS=false

# Google Cloud
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Cloudinary
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret
CLOUDINARY_API_FOLDER=your-cloudinary-folder

# YouTube (Relative to API package root)
YOUTUBE_COOKIES_FILE=

# Web
VITE_BASE_API=http://localhost:3000
VITE_BASE_API_PATH=
VITE_BASE_APP=http://localhost:5173
